@model Repo.Core.Product
@{
    ViewData["Title"] = Model!=null && Model.Id==0 ? "Add Products Details":"Update Details";
}
<h5>@ViewData["Title"]</h5>
<form method="post" action="Create" style="width:500px">
    <div class="card">
        <div class="card-header">
          

        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id" />
            <div class="form-floating mb-2">
                <input asp-for="BookName" class="form-control"/>
                <label asp-for="BookName"></label>
                <span asp-validation-for="BookName" class="text-danger"></span>


            </div>
            <div class="form-floating mb-2">
                <input asp-for="Price" class="form-control" />
                <label asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger"></span>


            </div>
            <div class="form-floating mb-2">
                <input asp-for="Qty" class="form-control" />
                <label asp-for="Qty"></label>
                <span asp-validation-for="Qty" class="text-danger"></span>


            </div>
            @if(Model!=null && Model.Id == 0)
            {
                <div class="col-lg-12 d-grid">
                    <a type="submit" class="btn btn-primary" asp-controller="Product" asp-action="CreateOrEdit">Add</a>
                </div>
                <div class="col-lg-12 d-grid">
                <a type="submit" class="btn btn-warning" asp-controller="Product" asp-action="Index">Back</a>
                </div>
            }
            else
            {
                <div class="col-lg-12 d-grid">
                    <button type="submit" class="btn btn-success" >Update</button>
                </div>
                <div class="col-lg-12 d-grid">
                    <a type="submit" class="btn btn-warning" asp-controller="Product" asp-action="Index">Back</a>
                </div>
            }
            @*asp-controller="Product" asp-action="CreateOrEdit"*@
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
  
}